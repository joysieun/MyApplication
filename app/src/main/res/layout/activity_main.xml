<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#CCDFB6"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#EBF1B5">
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView

                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitCenter"
                android:id="@+id/infopage_img"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/btn_green"
                />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름: "
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_marginLeft="5dp"
                        android:id="@+id/tv_petname"
                        android:layout_width="60dp"
                        android:textColor="#CF4373"
                        android:layout_height="wrap_content"
                        />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        android:text="주인: "/>
                    <TextView
                        android:layout_marginLeft="5dp"

                        android:id="@+id/tv_owner"
                        android:textColor="@color/black"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="나이: "/>
                    <TextView
                        android:layout_marginLeft="5dp"

                        android:id="@+id/tv_petage"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="성별: "/>
                    <TextView
                        android:layout_marginLeft="5dp"

                        android:id="@+id/tv_petsex"
                        android:layout_width="60dp"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="생일: "/>
                    <TextView
                        android:layout_marginLeft="5dp"

                        android:id="@+id/tv_petbirth"
                        android:layout_width="wrap_content"
                        android:textColor="@color/black"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout

            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_doginfo2"
                android:layout_width="47dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/btn_yell"
                android:text="등록"
                android:textSize="10sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_modify"
                android:layout_width="47dp"
                android:layout_height="35dp"
                android:textSize="10sp"
                android:layout_marginTop="4dp"
                android:background="@drawable/btn_yell"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="수정"/>
        </LinearLayout>

    </LinearLayout>


    <FrameLayout
        android:id="@+id/containers"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/bottom_menu_navi"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@drawable/bottom_menu_color"
        app:itemTextColor="@drawable/bottom_menu_color"
        app:menu="@menu/bottom_menu"/>
</LinearLayout>