<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F2F6DE">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"

        android:gravity="center"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dogicon"/>
        <TextView
            android:layout_marginRight="25dp"
            android:layout_marginLeft="10dp"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_gravity="bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="헬스 케어"
            android:textStyle="bold"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:background="@drawable/layout_background"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#ffffff">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:textColor="@color/black"
                android:text="동물병원"/>

            //예방접종 디테일은 나중에
            <EditText
                android:id="@+id/carehospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="10sp"
                android:textColor="@color/black"
                android:hint="동물병원 이름을 적어주세요."
                />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:text="진료내용"/>


        <EditText
            android:textColor="@color/black"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="16sp"
            android:hint="진료내용을 입력하세요."
            android:id="@+id/carecontent"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 추가"/>
        <TextView
            android:layout_marginLeft="45dp"
            android:layout_width="wrap_content"
            android:textSize="10sp"
            android:layout_height="wrap_content"
            android:text="이미지 선택은 필수가 아닙니다."
            android:textColor="#EF9B9B"/>

        <ImageView
            android:id="@+id/imgcare"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_background"
            app:srcCompat="@android:drawable/ic_input_add"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_suspend2"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_green"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginLeft="20dp"
            android:id="@+id/btn_care"
            android:layout_gravity="right"

            android:background="@drawable/btn_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="추가"/>
    </LinearLayout>

</LinearLayout>