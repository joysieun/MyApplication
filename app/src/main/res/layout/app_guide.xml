<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF7FB"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/btn_closeguide"
            android:layout_width="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_height="30dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피부check 촬영가이드"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp" />
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="촬영 전 준비해 주세요"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피부에 이물질이 있다면 깨끗이 닦아주시고"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="털이 많은 부분을 촬영할때는 물이나 손을 사용해"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="털을 눕혀 피부가 최대한 잘 보이도록 촬영해주세요"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="어떻게 사용하는건가요?"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:background="@drawable/layout_background">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:src="@drawable/aaa"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_width="180dp"
                android:layout_height="250dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/cm"/>
        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="홈페이지에서 피부check 버튼을 누른 후"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="피부체크를 받고 싶은 사진을 선택하기 위해"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카메라로 사진을 찍거나 이미지에서 가져옵니다"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더 정확한 체크를 위한 이미지 크롭"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background">
            <ImageView

                android:layout_gravity="center_horizontal"

                android:layout_marginLeft="100dp"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@drawable/cropimage"/>
        </LinearLayout>

        <TextView
            android:textStyle="bold"

            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#3F51B5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 크롭 기능으로"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사물이나 사람의 손이 나오지 않도록 해주세요."/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="그리고 최대한 질병 부위로 이미지를 크롭해주세요."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택과 크롭이 끝나면 확인해주세요"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background">
            <ImageView

                android:layout_gravity="center_horizontal"

                android:layout_marginLeft="100dp"
                android:layout_width="200dp"
                android:layout_height="250dp"
                android:src="@drawable/reset_image"/>
        </LinearLayout>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="체크를 시작하기 전에"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="체크를 받을 이미지인지, 이미지 크롭이 잘 되었는지 확인해주세요."/>
        <TextView
            android:layout_marginBottom="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="#3F51B5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="다시 이미지를 선택하려면 재선택 버튼을 눌러주세요."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="체크 결과는 어떻게 확인하나요?"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_background">
            <ImageView

                android:layout_gravity="center_horizontal"

                android:layout_marginLeft="80dp"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/mypage_guide"/>
        </LinearLayout>


        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="하단에 있는 mypage를 선택하면"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="체크받은 이미지와 결과값을 확인할 수 있습니다."/>
        <TextView
            android:layout_marginBottom="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textColor="#3F51B5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="결과 리스트를 클릭하시면 더 자세한 설명을 확인할 수 있고 메모도 추가 할 수 있습니다."/>


        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView

                android:id="@+id/text1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'나로'"/>
            <TextView

                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  서비스는 "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:textColor="#980D0D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="의사를 대신해 진단을 내려주는 것이 아닌"/>

        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:textColor="#980D0D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="의사에게 가기 전 1차적으로 어떤 피부질병인지"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:layout_marginBottom="20dp"
            android:textColor="#980D0D"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="체크해보는 것임을 알려드립니다."/>



        </LinearLayout>
</ScrollView>