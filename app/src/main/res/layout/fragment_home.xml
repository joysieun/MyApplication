<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_using"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginBottom="50dp"
            android:background="#EEF7FB"
            android:drawableStart="?android:attr/actionModeWebSearchDrawable"
            android:drawableRight="@android:drawable/ic_media_play"
            android:drawingCacheQuality="high"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="앱 사용방법 및 촬영가이드"
            android:textSize="15sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cam"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_green"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:text=" 피부 이미지로 진단하기"

            android:textSize="20sp" />

       

        <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text1"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="'나로'"/>
            <TextView

                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  서비스는 "/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="의사를 대신해 진단을 내려주는 것이 아닌"/>
        </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="의사에게 가기 전 1차적으로 어떤 피부질병인지"/>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="체크해보는 것임을 알려드립니다."/>
    </LinearLayout>


</LinearLayout>
