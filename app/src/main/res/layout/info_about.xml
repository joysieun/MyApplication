<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".AboutInfo">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#ffffff"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        />
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:scaleType="fitCenter"
            android:id="@+id/infopage_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_baseline_home_24"
            />
        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름: "/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_petname"
                    android:layout_width="60dp"
                    android:text="하얀"
                    android:layout_height="wrap_content"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주인: "/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_owner"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="시은"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이: "/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_petage"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="3"
                    />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="성별: "/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_petsex"
                    android:layout_width="60dp"
                    android:text="w"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="생일: "/>
                <TextView
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:id="@+id/tv_petbirth"
                    android:layout_width="wrap_content"
                    android:text="3/29"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/containers"

        android:layout_width="match_parent"
        android:layout_height="565dp"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_menu_navi"
        android:layout_gravity="bottom"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@drawable/bottom_menu_color"
        app:itemTextColor="@drawable/bottom_menu_color"
        app:menu="@menu/bottom_menu"/>
</LinearLayout>