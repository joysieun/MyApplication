<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView

            android:id="@+id/chatit_img"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/btn_no"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/chatit_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="naro-bot"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:padding ="10dp"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:layout_marginLeft="10dp"
            android:id="@+id/chatit_msg"
            android:textColor="@color/black"
            android:background="@drawable/background_chatbot"
            android:padding="20dp"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="chat_bot"/>

        <TextView

            android:id="@+id/chatit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:layout_marginTop="20dp"
            android:text="time"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>
